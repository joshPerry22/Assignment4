@{
    ViewBag.Name = "Josh Perry";
}

@model AssignmentOne.Models.GradeCalcModel

<body>
    <h3 class="headerColor">Grade Calculator</h3><!--Setting a min and max for the inputs-->

    <form method="post">
        <label>Assignment Grade:</label> <!--50%-->
        <input  id="hw" asp-for="hw"  value="0" min="0" max="100" step="0.01"  />
        <br /><br />
        <label>Group Project Grade:</label> <!--10%-->
        <input  id="groupProject" asp-for="groupProject"  value="0" min="0" max="100" step="0.01" />
        <br /><br />
        <label>Quiz Grade:</label> <!--10%-->
        <input  id="quiz" asp-for="quiz"  value="0" min="0" max="100" step="0.01"/>
        <br /><br />
        <label>Exam Grade:</label> <!--20%-->
        <input  id="exam" asp-for="exam"  value="0" min="0" max="100" step="0.01"  />
        <br /><br />
        <label>INTEX Grade:</label> <!--10%-->
        <input  id="intex" asp-for="intex"   value="0" min="0" max="100" step="0.01" />
        <br /><br />
        <input type="submit" onclick="calcGrade()" value="Calculate" />
        <div asp-validation-summary="All"></div>
    </form>
</body>
