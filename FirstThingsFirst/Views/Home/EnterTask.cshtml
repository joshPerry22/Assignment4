@model TaskItem

<form asp-action="EnterTask" method="post">
    <label asp-for="TaskDescription">Task Name</label>
    <input asp-for="TaskDescription" />
    <br /><br />

    <label asp-for="Urgent">Urgent?</label>
    <input type="checkbox" asp-for="Urgent" />
    <br /><br />

    <label asp-for="Important">Important?</label>
    <input type="checkbox" asp-for="Important" />
    <br /><br />

    <button type="submit">Add Task</button>
    <br />
    <div asp-validation-summary="All"></div>
</form>