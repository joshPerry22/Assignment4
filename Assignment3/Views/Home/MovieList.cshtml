@{
    ViewBag.Title = "Movie List";
}

@model MovieViewModel
    

    <h2>Movie List</h2>
    <div>
        <table>
            <thead>
                <tr><th>Category </th><th> Title </th><th> Year </th><th> Director </th><th> Rating</th><th> Edited </th><th> Lent to </th><th> Notes </th></tr>
            </thead>
            <tbody>
                @foreach (var x in Model.movie)

                {
                    @if (x.Title.ToLower() != "independence day")  
                    {
                        <tr>
                            <td>@x.Category</td>
                            <td>@x.Title</td>
                            <td>@x.Year</td>
                            <td>@x.Director</td>
                            <td>@x.Rating</td>
                            <td>@x.Edited</td>
                            <td>@x.Lent</td>
                            <td>@x.Notes</td>
                        </tr>

                    }

                }
            </tbody>

        </table>
    </div>

