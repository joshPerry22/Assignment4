@{
    ViewBag.Title = "Send that message";
}


@model JoshFirstASP.Models.FanMailModel

<body>
    <h2>Fan Mail</h2>
    <form method="post">
        <label>From:</label>
        <input id="from" asp-for="from" />
        <br />
        <label>Email:</label>
        <input id="email"  asp-for="email" />
        <br />
        <label>Subject</label>
        <input id="subject"  asp-for="subject" />
        <br />
        <label>Message</label>
        <br />
        <textarea rows="5" id="message"  asp-for="message"></textarea>
        <br /><br />
        <input type="submit" value="Send" id="submitButton" />
        <div asp-validation-summary="All"></div>
    </form>
</body>


